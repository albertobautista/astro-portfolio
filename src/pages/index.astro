---
import Banner from "@/components/Banner.astro";
import LeftSide from "@/components/LeftSide.astro";
import About from "@/components/About.astro";
import RightSide from "@/components/RightSide.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import Layout from "@/layouts/Layout.astro";
---

<Layout
  title="Porfolio de midudev - Desarrollador y Programador Web con 15 años de experiencia"
  description="Contrata a midudev para crear tu aplicación web o móvil. Desarrollador Web y Creador de Contenido. Especializado en crear aplicaciones únicas."
>
  <main class="w-full h-[88vh] xl:flex items-center gap-20 justify-between">
    <div class="hidden xl:inline-flex w-32 h-full fixed left-0 bottom-0">
      <LeftSide />
    </div>
    <div class="h-[88vh] w-full mx-auto p-4">
      <SectionContainer
        id="experiencia"
        class="max-w-contentContainer mx-auto py-10 mdl:py-32 flex flex-col gap-4 lgl:gap-8 mdl:px-10 xl:px-4"
      >
        <Banner />
      </SectionContainer>
      <SectionContainer
        id="sobre-mi"
        class="max-w-containerSamll mx-auto py-10 mdl:py-20 flex flex-col gap-4 lgl:gap-8 mdl:px-10 xl:px-4"
      >
        <About />
      </SectionContainer>
    </div>
    <div class="hidden xl:inline-flex w-32 h-full fixed right-0 bottom-0">
      <RightSide />
    </div>
  </main>
</Layout>
