---
import Github from "./icons/Github.astro";
import Linkedin from "./icons/Linkedin.astro";
import Mail from "./icons/Mail.astro";

const SOCIAL_LINKS = [
  {
    name: "Github",
    link: "https://github.com/albertobautista",
    component: Github,
  },
  {
    name: "Linkedin",
    link: "https://www.linkedin.com/in/albertobautistac/",
    component: Linkedin,
  },
  {
    name: "Mail",
    link: "mailto:dachb_10@hotmail.com",
    component: Mail,
  },
];
---

<div
  class="w-full h-full flex flex-col items-center justify-end gap-4 text-textDark dark:text-textLight"
>
  <div class="flex flex-col gap-4">
    {
      SOCIAL_LINKS.map((link) => (
        <a href={link.link} target="_blank">
          <span class="w-10 h-10 text-xl bg-textLight rounded-full dark:bg-hoverColor inline-flex items-center justify-center hover:text-orange cursor-pointer hover:-translate-y-2 transition-all duration-300">
            <link.component />
          </span>
        </a>
      ))
    }
  </div>
  <div class="w-[2px] h-32 bg-textDark"></div>
</div>
